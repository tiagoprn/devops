version: "3"
services:
  traefik:
    image: traefik:1.7-alpine
    container_name: traefik
    privileged: true
    restart: unless-stopped
    labels:
      - traefik.frontend.rule=Host:traefik.example.com
      - traefik.port=8080
      - traefik.enable=true
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - ./traefik.toml:/etc/traefik/traefik.toml
      - ./certs:/certs
    ports:
      - 80:80
      - 443:443
      - 8080:8080
