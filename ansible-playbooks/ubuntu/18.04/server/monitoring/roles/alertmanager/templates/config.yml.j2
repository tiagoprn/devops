global:
  # The smarthost and SMTP sender used for mail notifications.
  smtp_smarthost: '{{ smtp_smarthost }}'
  smtp_from: '{{ smtp_from }}'
  smtp_auth_username: '{{ smtp_auth_username }}'
  smtp_auth_password: '{{ smtp_auth_password }}'
{% raw %}
route:
  receiver: "default"
  routes:
   - match:
      severity: info
     receiver: email

   - match:
      severity: critical
     receiver: email
     group_wait: 30s
     group_interval: 5m
     repeat_interval: 5m

receivers:
  - name: default
    email_configs:
     - to: 'to@youremail.com'
       html: '{{ template "email" .}}'

  - name: email
    email_configs:
     - to: 'to@youremail.com'
       html: '{{ template "email" .}}'

templates:
  - '/etc/prometheus/alert.tmpl'
{% endraw %}
