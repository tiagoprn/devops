% security, keys, secrets, gpg, env

# decrypt and source env keys file (ex. OPENAI, etc...)
notify-send "Decrypting env keys file..." && \
gpg --decrypt /storage/src/gpg/keys/keys.env.gpg > /storage/src/gpg/keys/keys.env && \
notify-send "Sourcing env keys file..." && \
source /storage/src/gpg/keys/keys.env && \
notify-send "Deleting decrypted env keys file..." && \
rm /storage/src/gpg/keys/keys.env && \
notify-send "Successfully sourced env keys file and deleted it for security."
