% security, keys, secrets, gpg, env, OPENAI

# trigger nvim with OPENAI key setup
notify-send "Decrypting key file..." && \
gpg --decrypt /storage/src/gpg/keys/OPENAI_API_KEY.gpg > /storage/src/gpg/keys/OPENAI_API_KEY && \
notify-send "Copying key to clipboard..." && \
cat /storage/src/gpg/keys/OPENAI_API_KEY | cb && \
notify-send "Deleting decrypted key file..." && \
rm /storage/src/gpg/keys/OPENAI_API_KEY && \
notify-send "Triggering nvim with OpenAI API key setup." && \
export OPENAI_API_KEY=$(cbp) && nvim
