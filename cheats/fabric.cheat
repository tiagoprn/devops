% AI, fabric

# install (must have yt-dlp installed for the YouTube related features)
yay -S fabric-ai --noconfirm

# open git repo url
xdg-open https://github.com/danielmiessler/Fabric

# setup
fabric-ai --setup

# list all custom modules (created by me)
ls -lha /storage/src/ai-prompts/fabric

# (custom pattern) convert from celsius to fahrenheit - e.g. text: Today is 25C, yesterday was -3.5C.
echo "<text>" | fabric-ai -p convert_c_to_f

# list all available patterns (builtin and custom)
fabric-ai --listpatterns

# get transcript from youtube video (no LLM involved, this is pure fabric)
fabric-ai -y '<youtube-video-url>' --transcript

# summarize youtube video (it automatically gets the transcript)
fabric-ai -y '<youtube-video-url>' --stream --pattern summarize

# Extract wisdom from youtube video (it automatically gets the transcript)
fabric-ai -y '<youtube-video-url>' --stream --pattern extract_wisdom

# get (scrape) URL contents as markdown
fabric-ai -u '<url>' > <markdown-file-path>

# summarize URL contents
fabric-ai -u '<url>' -p summarize

# extract wisdom from URL contents
fabric-ai -u '<url>' -p extract_wisdom

# process monthly hours report
cat <report-txt-file> | fabric-ai -p monthly_hours_invoice
