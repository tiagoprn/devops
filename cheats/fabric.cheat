% AI, fabric

# install (must have yt-dlp installed for the YouTube related features)
yay -S fabric-ai --noconfirm

# open git repo url
xdg-open https://github.com/danielmiessler/Fabric

# setup
fabric-ai --setup

# list all custom modules (created by me)
ls -lha /storage/src/ai-prompts/fabric

# list all available patterns (builtin and custom)
fabric-ai --listpatterns

# (INPUT=YOUTUBE): get transcript from youtube video (no LLM involved, this is pure fabric)
fabric-ai -y '<youtube-video-url>' --transcript

# (INPUT=YOUTUBE): summarize youtube video (it automatically gets the transcript)
fabric-ai -y '<youtube-video-url>' --stream --pattern summarize

# (INPUT=YOUTUBE): Extract wisdom from youtube video (it automatically gets the transcript)
fabric-ai -y '<youtube-video-url>' --stream --pattern extract_wisdom

# (INPUT=URL): get (scrape) contents as markdown
fabric-ai -u '<url>' > <markdown-file-path>

# (INPUT=URL): summarize contents
fabric-ai -u '<url>' -p summarize

# (INPUT=URL): extract wisdom from contents
fabric-ai -u '<url>' -p extract_wisdom

# (INPUT=CLIPBOARD_FILE): summarize text on clipboard file
cat /tmp/clipboard/copied.txt | fabric-ai -p summarize > /tmp/clipboard/ai.txt && nvim -o /tmp/clipboard/copied.txt /tmp/clipboard/ai.txt

# (INPUT=CLIPBOARD_FILE): CUSTOM PATTERN: spell check on clipboard file
cat /tmp/clipboard/copied.txt | fabric-ai -p custom_spell_check > /tmp/clipboard/ai.txt && nvim -o /tmp/clipboard/copied.txt /tmp/clipboard/ai.txt

# (INPUT=CLIPBOARD_FILE): CUSTOM PATTERN: rewrite text on clipboard file
cat /tmp/clipboard/copied.txt | fabric-ai -p rewrite_text > /tmp/clipboard/ai.txt && nvim -o /tmp/clipboard/copied.txt /tmp/clipboard/ai.txt

# (INPUT=TEXT): CUSTOM PATTERN: convert from celsius to fahrenheit - e.g. text: Today is 25C, yesterday was -3.5C.
echo "<text>" | fabric-ai -p convert_c_to_f

# (INPUT=FILE): CUSTOM PATTERN: process monthly hours report
cat <report-txt-file> | fabric-ai -p monthly_hours_invoice

# (INPUT=TEXT): CUSTOM PATTERN: create remind cli entries
fabric-ai -p remind '<description-of-the-alarm-here>'

# -- FIXME: not possible with fabric-ai: transcribe local file (if that is a video, convert to mp3 audio to use less tokens)
fabric-ai --transcribe-file "<local-audio-file-path>" --transcribe-model "openai/gpt-4o-mini-transcribe"
