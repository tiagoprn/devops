% apt debian ubuntu

# list installed package contents:
sudo dpkg -L <package-name>

# list all installed packages
INSTALLED_PACKAGES_OUTPUT_FILE=/tmp/installed-apt-packages.$(hostname).$(date +%Y%m%d-%H%M%S-%N) sudo apt list --installed > $INSTALLED_PACKAGES_OUTPUT_FILE && echo "The list of installed packages is at: $INSTALLED_PACKAGES_OUTPUT_FILE"
